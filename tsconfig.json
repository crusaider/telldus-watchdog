{
  "extends": "@tsconfig/node10/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "lib/*",
        "test/*"
      ]
    },
  },
  "exclude": [
    "example",
    "node_modules"
  ],
  "include": [
    "./lib",
    "./test"
  ],
}
