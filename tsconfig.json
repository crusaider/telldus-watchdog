{
  "extends": "@tsconfig/node10/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es6"],
    "paths": {
      "*": ["*", "lib/*", "test/*"]
    }
  },
  "exclude": ["example", "node_modules"],
  "include": ["./lib", "./test"]
}
